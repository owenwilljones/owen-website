<ul class="post-list">
{% for post in postList reversed -%}
  <li class="post-list__post">
    <h3 class="post-list__post-title">
      <a href="{{ post.url }}">{{ post.data.title }}</a>
      <span class="post-list__post-date">Published: {{ post.page.date | date: "%e %B %Y" }}</span>
    </h3>
    <p>{{ post.data.description }}</p>
  </li>
{% endfor -%}
</ul>
